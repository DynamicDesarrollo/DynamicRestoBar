{
  "name": "dynamicrestobar-backend",
  "version": "1.0.0-alpha",
  "description": "API REST para DynamicRestoBar - Sistema POS Restaurante & Bar",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "migrate": "knex migrate:latest --knexfile src/config/knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile src/config/knexfile.js",
    "migrate:list": "knex migrate:list --knexfile src/config/knexfile.js",
    "seed": "knex seed:run --knexfile src/config/knexfile.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "build": "tsc"
  },
  "keywords": [
    "pos",
    "restaurante",
    "bar",
    "inventario",
    "comandas"
  ],
  "author": "DynamicRestoBar Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "pg": "^8.11.3",
    "knex": "^3.1.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.2",
    "axios": "^1.6.5",
    "uuid": "^9.0.1",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
