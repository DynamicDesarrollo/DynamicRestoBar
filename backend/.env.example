NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dynamicrestobar
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dynamicrestobar

# Server
PORT=5000
API_PREFIX=/api/v1

# JWT
JWT_SECRET=your-super-secret-key-change-in-production-12345
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRE=7d

# CORS
FRONTEND_URL_POS=http://localhost:3001
FRONTEND_URL_KDS=http://localhost:3002
FRONTEND_URL_ADMIN=http://localhost:3003

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Impresoras
PRINT_SERVICE_HOST=localhost
PRINT_SERVICE_PORT=9100

# Email (para notificaciones, opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Timezone
APP_TIMEZONE=America/Bogota

# Modo Debug
DEBUG=false
